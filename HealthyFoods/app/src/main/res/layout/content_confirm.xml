<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_confirm" tools:context="com.serverphone.healthyfoods.Confirm"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        card_view:cardElevation="10dp"

        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="#C5E1A5"

        card_view:cardCornerRadius="12dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Next Image"
                android:textColor="#000000"
                android:textSize="15dp"
                android:textStyle="italic"

                />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/sub3"
                android:id="@+id/button13"
                android:focusable="true"
                android:layout_marginEnd="20dp"
                android:layout_alignParentTop="true"
                android:layout_toStartOf="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textSize="15dp"
                android:textColor="#000000"
                android:id="@+id/textView5"
                android:layout_marginEnd="18dp"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@+id/button14" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:focusable="true"
                android:background="@drawable/add3"
                android:id="@+id/button14"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true" />

            <!--<ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/chicken_curry1"/>-->
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="25dp"
        android:textStyle="italic"
        android:id="@+id/textView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_toEndOf="@+id/textView5"/>-->

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm And Place Order"
        android:textSize="20dp"
        android:theme="@style/MyButton"
        android:background="@layout/reflected_gradient_effect"
        android:textColor="#f9fcfa"
        android:id="@+id/button10"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentStart="true" />
</RelativeLayout>
